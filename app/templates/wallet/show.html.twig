{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.wallet_details'|trans({'%id%': wallet.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.wallet_details'|trans({'%id%': wallet.id|default('')}) }}</h1>
    <dl class="dl-horizontal">
        <dt>{{ 'label.id'|trans }}</dt>
        <dd>{{ wallet.id }}</dd>
        <dt>{{ 'label.name'|trans }}</dt>
        <dd>{{ wallet.name }}</dd>
        <dt>{{ 'label.balance'|trans }}</dt>
        <dd>{{ wallet.balance }}</dd>
    </dl>
    <p>
        <a href="{{ url('wallet_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    </p>
{% endblock %}